# Synthia Frontend Demo Mode Environment Configuration
# =============================================================================
# Copy this file to .env to enable demo mode for showcasing the full Synthia workflow
# Command: cp frontend/.env.demo frontend/.env
# =============================================================================

# =============================================================================
# DEMO MODE SETTINGS
# =============================================================================
# Enable demo mode - this will use mock data and simulated agent interactions
VITE_USE_MOCK_API=true

# Enable demo wallet mode - shows demo wallet instead of requiring real wallet connection
VITE_DEMO_MODE=true

# Enable enhanced demo features
VITE_ENABLE_DEMO_TOUR=true
VITE_ENABLE_DEMO_ANALYSIS=true

# =============================================================================
# CONTRACT ADDRESSES (Demo Mode - Using provided addresses)
# =============================================================================
# Main Synthia contract address (from user)
VITE_SYNTHIA_CONTRACT_ADDRESS=0x88ff715f1c23c2061133994cfd58c1e35a05bea2

# NFT contract address (from user)
VITE_SYNTHIA_NFT_CONTRACT_ADDRESS=0x1e3d3facfaf416f0b0c038cc402ec36f06b064ef

# =============================================================================
# WALLET CONNECTION (Demo Mode)
# =============================================================================
# Reown project ID (required for wallet connection interface)
# Get this from: https://cloud.walletconnect.com/
VITE_REOWN_PROJECT_ID=

# Demo wallet address for testing
VITE_DEMO_WALLET_ADDRESS=0x69C0f1Aaf05751adBA5a55cc2B751Ddd66186576

# =============================================================================
# API ENDPOINTS (Demo Mode - Mock Services)
# =============================================================================
# Mock API endpoints for demo mode
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Agent service endpoints (mock)
VITE_ORCHESTRATOR_URL=http://localhost:8000
VITE_ANALYZER_URL=http://localhost:8001
VITE_BLOCKCHAIN_URL=http://localhost:8002

# =============================================================================
# NETWORK CONFIGURATION (Demo Mode)
# =============================================================================
VITE_DEFAULT_NETWORK=testnet

# RPC endpoints
VITE_HEDERA_TESTNET_RPC=https://testnet.hashio.io/api
VITE_HEDERA_MAINNET_RPC=https://mainnet.hashio.io/api
VITE_HEDERA_PREVIEWNET_RPC=https://previewnet.hashio.io/api

# Chain configuration
VITE_HEDERA_CHAIN_ID=296

# =============================================================================
# DEMO DATA CONFIGURATION
# =============================================================================
# Demo user profiles for realistic demonstration
VITE_DEMO_USER_COUNT=3
VITE_DEMO_ANALYSIS_DURATION=15000
VITE_DEMO_SCORE_VARIATION=50

# Enable realistic demo progression
VITE_DEMO_REALISTIC_PROGRESSION=true
VITE_DEMO_MULTIPLE_WALLETS=true

# =============================================================================
# UI CONFIGURATION (Demo Mode)
# =============================================================================
# Application metadata
VITE_APP_NAME=Synthia Demo
VIT_APP_DESCRIPTION=Demo: Decentralized Reputation System
VITE_APP_VERSION=1.0.0-demo

# Theme configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_ANIMATIONS=true

# Loading states
VITE_DEFAULT_LOADING_TIMEOUT=15000

# =============================================================================
# DEVELOPMENT SETTINGS (Demo Mode)
# =============================================================================
# Enable verbose logging for demo
VITE_DEBUG_MODE=true

# API request timeout (longer for demo simulations)
VITE_API_TIMEOUT=30000

# Retry attempts for failed requests (higher for demo reliability)
VITE_API_RETRY_ATTEMPTS=5

# Wallet connection timeout
VITE_WALLET_CONNECTION_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS (Demo Mode)
# =============================================================================
# Enable analytics tracking for demo insights
VITE_ENABLE_ANALYTICS=false

# Show testnet faucet links (disabled in demo)
VITE_ENABLE_TESTNET_FAUCET=false

# Enable development tools
VITE_ENABLE_DEVTOOLS=true

# Enable error reporting (disabled in demo)
VITE_ENABLE_ERROR_REPORTING=false

# =============================================================================
# DEMO TOUR CONFIGURATION
# =============================================================================
# Enable guided demo tour
VITE_DEMO_TOUR_ENABLED=true

# Auto-start demo tour
VITE_DEMO_TOUR_AUTO_START=false

# Demo tour duration (milliseconds)
VITE_DEMO_TOUR_DURATION=300000

# =============================================================================
# AGENT SIMULATION SETTINGS
# =============================================================================
# Enable realistic agent coordination simulation
VITE_SIMULATE_AGENT_COORDINATION=true

# Agent response delay (milliseconds)
VITE_AGENT_RESPONSE_DELAY=2000

# Enable agent status monitoring
VITE_MONITOR_AGENT_STATUS=true

# Agent coordination timeout
VITE_AGENT_COORDINATION_TIMEOUT=30000

# =============================================================================
# NFT DEMO SETTINGS
# =============================================================================
# Enable dynamic NFT color changes based on scores
VITE_NFT_DYNAMIC_COLORS=true

# NFT update animation duration
VITE_NFT_UPDATE_ANIMATION=3000

# Enable NFT tier progression
VITE_NFT_TIER_PROGRESSION=true

# =============================================================================
# SECURITY & PERFORMANCE (Demo Mode)
# =============================================================================
# Disable security features for demo
VITE_CSP_HEADER=none

# Enable service worker for demo caching
VITE_ENABLE_SERVICE_WORKER=false

# Demo session timeout (minutes)
VITE_DEMO_SESSION_TIMEOUT=60
